@model Core_ManagementSystem.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Login" method="post">
    <div>
        <label for="Username">User_Name</label>
        <input type="text" id="Username" name="Username" value="@Model.User_Name" />
        @if (ViewData.ModelState["Username"]?.Errors.Count > 0)
        {
            <span>@ViewData.ModelState["Username"].Errors[0].ErrorMessage</span>
        }
    </div>

    <div>
        <label for="Password">Password</label>
        <input type="password" id="Password" name="Password" />
        @if (ViewData.ModelState["Password"]?.Errors.Count > 0)
        {
            <span>@ViewData.ModelState["Password"].Errors[0].ErrorMessage</span>
        }
    </div>

    <div>
        <button type="submit">Login</button>
    </div>
</form>
