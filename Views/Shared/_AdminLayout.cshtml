<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <h3>Admin Panel</h3>
        </div>
        <ul>
            <li><a href="/Home/Dashboard">Dashboard</a></li>
            <li><a href="/Advisor/Index">Advisor</a></li>
