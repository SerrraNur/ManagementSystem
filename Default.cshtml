@using EntityLayer.Concrete
@model List<Core_ManagementSystem.Models.CourseSelectionViewModel>

@foreach (var selection in Model)
{
    <div class="panel-container">
        <h1>Student: @selection.Student.FullName</h1>
        <h2>Selected Courses</h2>
        <ul id="courseRequests">
            @foreach (var course in selection.SelectedCourses)
            {
                <li>
                    @course.CourseName
                    <button onclick="approveCourse('@course.CourseName', '@selection.Student.FullName')">Approve</button>
                    <button class="reject" onclick="rejectCourse('@course.CourseName', '@selection.Student.FullName')">Reject</button>
                </li>
            }
        </ul>
    </div>
}